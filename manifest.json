{
  "manifest_version": 3,
  "name": "Moodle Docs Viewer",
  "description": "Open Word documents in your browser instead of downloading them on Moodle",
  "version": "1.0.0",
  "author": "Jonathan Zulluna",
  "browser_specific_settings": {
    "gecko": {
      "id": "moodle-docs-viewer@jonathanzulluna",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.moodle.*/*",
    "*://moodle.*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.svg"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.moodle.*/*", "*://moodle.*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
