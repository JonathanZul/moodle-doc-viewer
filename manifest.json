{
  "manifest_version": 3,
  "name": "Moodle Docs Viewer",
  "description": "View Word documents directly in your browser on Moodle without downloading",
  "version": "2.0.0",
  "author": "Jonathan Zulluna",
  "browser_specific_settings": {
    "gecko": {
      "id": "moodle-docs-viewer@jonathanzulluna",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.svg"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["viewer.html", "viewer.js", "viewer.css", "lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
